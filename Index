    text-shadow: 0 0 10px #ff2d75;
    margin-bottom: 2rem;
    text-align: center;
  }

  .buttons {
    display: flex;
    gap: 2rem;
  }

  button {
    padding: 15px 30px;
    font-size: 1.2rem;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: 0.2s;
  }

  #yes {
    background-color: #ff4da6;
